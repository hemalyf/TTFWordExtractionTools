    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${workspaceFolder}\\index.js",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ],
            "cwd": "${workspaceFolder}",
            "args": [
                "-s",
                "test/youyuan.ttf",
                "-o",
                "test/out_youyuan.ttf",
                "-e",
                "utf8",
                "-l",
                "test/**/*.txt;!test/**/*.ttf;",
                "-l",
                "!test/**/*.txt.bak",
                "-f",
                "test/include_en.txt;test/include_num.txt"
            ]
        }
    ]
}